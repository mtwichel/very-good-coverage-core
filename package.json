{
  "name": "very-good-coverage-core",
  "version": "0.0.1",
  "description": "A package for analyzing lcov.info files and generating reports from them for use in developer tools.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint --ext .ts .",
    "build": "tsc",
    "test": "mocha --require ts-node/register test/**/*.test.ts",
    "coverage": "nyc --reporter lcovonly npm run test",
    "format:check": "prettier --check **/*.ts",
    "format": "prettier --write **/*.ts"
  },
  "author": "Marcus Twichel",
  "license": "MIT",
  "dependencies": {
    "handlebars": "^4.7.6",
    "parse-lcov": "^1.0.4",
    "fs-extra": "^9.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.3",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "@vgventures/prettier-config": "^1.0.3",
    "chai": "^4.2.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.1",
    "mocha": "^8.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "prettier-eslint": "^11.0.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "@types/fs-extra": "^9.0.4"
  },
  "prettier": "@vgventures/prettier-config"
}